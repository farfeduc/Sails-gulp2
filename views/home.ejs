                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <label>Email : </label>
                    </div>
                    <div class="col-xs-6 ">
                        <input type="email" ng-model="user.email" />
                    </div>
                </div>


                <div class="row">
                    <div class="col-xs-6">
                        <label>Password :</label>
                    </div>
                    <div class="col-xs-6 ">
                        <input type="password" ng-model="user.password" />
                    </div>
                </div>

                <div class="row">
                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                    <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                </div>

                <div class="row">
                    <div class="col-xs-4">
                        <div class="ngdialog-buttons">
                            <input type="submit" class="ngdialog-button ngdialog-button-primary" ng-click="connectRefugee()" value="Connect" />
                        </div>
                        
                    </div>
                </div>
             
            </form>
        </div>

        <div class="col-sm-12 col-md-6" style="border-left: thick solid #066DD4">
            <form novalidate class="simple-form">

                <div class="row">
                    <h2>
                        Sign Up <br/>
                        <hr style="color: rgba(255,255,255,0); border-top:1px solid rgba(0, 0, 0, 0)"/>
                    </h2>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <label>First Name : </label>
                    </div>
                    <div class="col-xs-6 ">
                        <input type="text" ng-model="user.first_name" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <label>Last Name : </label>
                    </div>
                    <div class="col-xs-6 ">
                        <input type="text" ng-model="user.last_name" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <label>Email : </label>
                    </div>
                    <div class="col-xs-6 ">
                        <input type="text" ng-model="user.email" />
                    </div>
                </div>


                <div class="row">
                    <div class="col-xs-6">
                        <label>Gender : </label>
                    </div>
                    <div class="col-xs-3 ">
                        <label><input type="radio" ng-model="user.gender" value="m" />  male</label>
                    </div>
                    <div class="col-xs-3 ">
                        <label><input type="radio" ng-model="user.gender" value="f" />  female</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <label>Birth date :</label>
                    </div>
                    <div class="col-xs-6 ">
                        <input type="date" ng-model="user.birthdate" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <label>Password :</label>
                    </div>
                    <div class="col-xs-6 ">
                        <input type="password" ng-model="user.password" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6">
                        <div class="ngdialog-buttons">
                            <input type="submit" class="ngdialog-button ngdialog-button-primary" ng-click="createRefugee()" value="Create Account" />
                        </div>
                    </div>
                </div>
             
            </form>
        </div>
    </div>
      

</script>

